<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityIngresar">

    <EditText
        android:id="@+id/txtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtnomb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Ingrese su nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtapel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/app_ap"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/cmbpais"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/paises" />

    <Spinner
        android:id="@+id/cmbposicion"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:entries="@array/posiciones"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/txtedad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Proporcione una edad"
        android:inputType="number" />

    <Button
        android:id="@+id/btningresar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="Ingresar Futbolista" />
</LinearLayout>